extends layout

block content

  h1 #{title}: #{company.name}

  if instruments_of_company.length

    p #[strong Delete the following books before attempting to delete this company.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Instruments by #{company.name}:
      dl
        each book in instruments_of_company
          dt
            a(href=book.url) #{book.name}
          dd #{book.stock}

  else
    p Do you really want to delete this company?

    form(method='POST')
      div.form-group
        input#companyid.form-control(type='hidden', name='companyid', value=company._id )

      button.btn.btn-primary(type='submit') Delete
