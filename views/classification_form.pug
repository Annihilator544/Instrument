extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') Classification Name:
      input#name.form-control(type='text', placeholder='strings, wind etc.' name='name' required value=(undefined===classification ? '' : classification.name) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
